import random
import string


def genera_semplice(lunghezza):
    caratteri = string.ascii_letters + string.digits
    return ''.join(random.choice(caratteri) for _ in range(lunghezza))


def genera_forte(lunghezza):
    speciali = ".,:;?\"!!"
    caratteri = string.ascii_letters + string.digits + speciali
    return ''.join(random.choice(caratteri) for _ in range(lunghezza))


def genera_numerica(lunghezza):
    return ''.join(random.choice(string.digits) for _ in range(lunghezza))


def test_forza(password):
    punteggio = 0
    speciali = ".,:;?\"!!"

    if len(password) >= 8:
        punteggio += 1
    if any(c.isupper() for c in password):
        punteggio += 1
    if any(c.isdigit() for c in password):
        punteggio += 1
    if any(c in speciali for c in password):
        punteggio += 1

    if punteggio <= 2:
        forza = "Debole"
    elif punteggio <= 3:
        forza = "Media"
    else:
        forza = "Forte"

    return forza, punteggio


def menu():
    print("\nGENERATORE DI PASSWORD")
    print("1 - Genera password semplice")
    print("2 - Genera password forte")
    print("3 - Genera password numerica")
    print("4 - Test forza password")
    print("0 - Esci")


while True:
    menu()
    scelta = input("Scegli un'opzione: ")

    if scelta == "0":
        print("Uscita dal programma")
        break

    elif scelta in ["1", "2", "3"]:
        lunghezza = int(input("Inserisci la lunghezza della password: "))

        if scelta == "1":
            password = genera_semplice(lunghezza)
        elif scelta == "2":
            password = genera_forte(lunghezza)
        else:
            password = genera_numerica(lunghezza)

        forza, punteggio = test_forza(password)
        print("Password generata:", password)
        print("Forza:", forza, "- Punteggio:", punteggio)

    elif scelta == "4":
        password = input("Inserisci la password da verificare: ")
        forza, punteggio = test_forza(password)
        print("Forza:", forza, "- Punteggio:", punteggio)

    else:
        print("Scelta non valida")
